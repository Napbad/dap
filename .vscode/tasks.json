{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pre-build",
            "type": "shell",
            "command": "${workspaceFolder}/gen_parser.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "${workspaceFolder}/build",
                "-Rf",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cmake configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-G",
                "\"Ninja\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                // "clean",
                "pre-build"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cmake build",
            "type": "shell",
            "command": "/usr/bin/cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "-j", "22",
                "--target", 
                "dap_main"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "cmake configure"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cmake all",
            "dependsOn": [
                "cmake configure",
                "cmake build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debug prepare",
            "type": "shell",
            "command": "echo",
            "args": [
                "\"compile successfully\"",
            ],
            "dependsOn": [
                "cmake all"
            ]
        }
    ]
}