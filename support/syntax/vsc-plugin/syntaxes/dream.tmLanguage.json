{
  "name": "Dream",
  "scopeName": "source.dream",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "match": "\\b(return|if|else|for|while|package|include|break|continue|try|catch|finally|var|imt|fun|class|enum|interface|annotation|public|private|protected|static|new|override|native|synchronized|throw|delete|byte|short|int|uint|ushort|long|ulong|llong|ullong|float|double|bool|char|string|void|const)\\b",
          "name": "keyword.control.dream"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.dream",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.dream"
            }
          ]
        },
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single.dream",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.dream"
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "begin": "//",
          "end": "$",
          "name": "comment.line.double-slash.dream"
        },
        {
          "begin": "/\\*",
          "end": "\\*/",
          "name": "comment.block.dream"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "match": "\\b(true|false)\\b",
          "name": "constant.language.boolean.dream"
        },
        {
          "match": "\\b(0|[1-9]\\d*)\\b",
          "name": "constant.numeric.integer.dream"
        },
        {
          "match": "\\b(0|[1-9]\\d*)\\.\\d+\\b",
          "name": "constant.numeric.float.dream"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "match": "\\b[a-zA-Z_][a-zA-Z_0-9]*\\b",
          "name": "variable.other.dream"
        }
      ]
    }
  }
}